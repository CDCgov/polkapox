nextflow_process {

    name "Test Process SUMMARIZE_TSV"
    script "modules/local/summarize_tsv/summarize_tsv.nf"
    process "SUMMARIZE_TSV"

    test("Should run without failures") {

        when {
            params {
                af_cutoff     = 0.01
                DP_cutoff     = 5
                altDP_cutoff  = 3
                altQ_cutoff   = 20
                outdir        = "."
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        meta: [id: 'test_sub'], ivar_tsv: file("${projectDir}/tests/nf-test-data/test_sub.ivar.tsv", checkIfExists: true)
                    ]
                )
                input[1] = Channel.of(coord1_start: '39086', coord1_end: '40204', coord2_start: '51427', coord2_end: '54447')
                input[2] = true
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
