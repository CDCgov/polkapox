nextflow_process {

    name "Test Process BWA_INDEX"
    script "modules/nf-core/bwa/index/main.nf"
    process "BWA_INDEX"

    test("Test | Clade I") {

        when {
            params {
                clade = 'cladeI'
            }
            process {
                """
                // define inputs of the process here. Example:
                 input[0] = file("/assets/NC_003310_clade_I.fasta")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }
        test("Test | Clade II") {

        when {
            params {
                clade = 'cladeII'
            }
            process {
                """
                // define inputs of the process here. Example:
                 input[0] = file("/assets/MPXV-UK_P2.noN.fasta")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
