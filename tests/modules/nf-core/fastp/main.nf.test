nextflow_process {

    name "FASTP Module Tests"
    script "../../../../modules/nf-core/fastp/main.nf"
    process "FASTP"
    tag "fastp"

    test("paired_end_basic") {
        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test_sub', single_end: false ],
                    [
                        file("${projectDir}/tests/nf-test-data/test_sub_1.fq.gz", checkIfExists: true),
                        file("${projectDir}/tests/nf-test-data/test_sub_2.fq.gz", checkIfExists: true)
                    ]
                ])
                input[1] = false
                input[2] = false
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

}
